package First;

public class Oparetors {

	public static void main(String[] args) {
		/*Operators in Java We have 8 types Operators They are 
		 * Arithmetic Operators
		 * Unary Operators 
		 * Assignment Operators 
		 * Logical Operators 
		 * Ternary Operators
		 * Bitwise Operators
		 * Instance Operators
		 * Shift operators
		 * Relational Operators*/
		//Arithmetic Operators 
		int x=30;
		int y=20;
		int c=50;
		System.out.println("=========Arithmetic Operators===================");
		System.out.println("x+y ="+(x+y));
		System.out.println("x-y ="+(x-y));
		System.out.println("x/y ="+(x/y));
		System.out.println("x*y ="+(x*y));
		System.out.println("x%y ="+(x%y));
		//Assignment Operators======================
		System.out.println("=================Assignment Operators===================");
		//we are assigning value right to the left operand
		System.out.println(" C holding value x+y and  itself :"+(c+=x+y));
		System.out.println(" C holding value x-y and  itself :"+(c-=x+-y));
		System.out.println(" C holding value x*y and  itself :"+(c*=x*y));
		System.out.println(" C holding value x/y and  itself :"+(c/=x/y));
		System.out.println(" C holding value y and  itself :"+(c=y));
		System.out.println(" C holding value x+y and  itself :"+(c%=x%y));
		//Unary Operators ==================================
		System.out.println("===============Unaray Operators======================");
		// unary operators are the types that need only one operand to perform any operation like increment, decrement, negation,
		System.out.println(-x);
		System.out.println(+x);
		// pre-increment
		System.out.println(++x);
		//post-increament
		System.out.println(++x);
		//post-decreament
		System.out.println(x--);
		//pre-decreament
		System.out.println(--x);
		System.out.println("===============Relational Operators======================");
		//This operator return boolean value
		System.out.println(x=y);
		System.out.println(x==y);
		System.out.println(x<y);
		System.out.println(x>y);
		System.out.println(x<=y);
		System.out.println(x>=y);
		System.out.println(!(x>y));
		System.out.println("================Logical Operators=======================");
		int a=5;
		int b=6;
		//AND both are true its returns TRUE
		System.out.println(a<b&&b>a);
		//OR if any one true it will return TRUE
		System.out.println(a<b||b<a);
		//NOT it will return TRUE it will become FALSE or FALSE return TRUE
		System.out.println(!(a>b));
		System.out.println(!(a<b));
		System.out.println("================Ternary Operators=======================");
		int p=1,q=2,num;
		num=(p>q)? p:q;//p>q this will false so q is execute
		System.out.println(num);
		System.out.println(num);
		System.out.println("===============Shift Operators==========================");
		int n=8;
		int o=100;
		int m=n>>2;
		int k=o<<2;
		System.out.println(m);
		System.out.println(k);
		System.out.println(n<<5);//1=16,2=32,3=64,4=128,5=256 etc
		System.out.println(n>>1);//1=4,2=2,3=1,4=0,5=0 etc
		System.out.println("===============Bitwise Operators======================");
		//Bitwise AND  Which returns both bits true it returns TRUE or False 
		//Bitwise operators perform only bits not decimals
		int h=2;//in bits 0010=2
		int i=3;//in bits 0011=3
		int z=30;
		System.out.println(h&i);
		/*result
		 * 0010
		 * 0011
		 * ====
		 * 0010=2 
		 */
		//OR If any one TRUE it will return TRUE
		System.out.println(h|i);
		/*result 
		 0010
		 0011
		 ====
		 0011=3*/
		//bitwise XOR corresponding bits are different it give 1 or 0
		System.out.println(h^i);
		/*result
		 0010
		 0011
		 ====
		 0001=1
		 
		 * */
		//Bitwise complement or(unary) its returns ones complement of the bits denoted by "~"
		System.out.println(~z);
		/*result
		 * 11110=30                                        128,64,32,16,8,4,2,1
		 *     1                                                    1 1 1 1 0
		 * =====
		 * 11111=31
		 * */
	}

}
